<div class="row">
  
  <div class="span2">
  <% if vote = current_user.voted(@story) %>
    <%= link_to [@story, vote], class: 'btn btn-primary', method: :delete do %>
      <i class="glyphicon glyphicon-thumbs-up"> </i>&nbsp; TrueStory
    <% end %>
  <% else %>
    <%= link_to [@story, Vote.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-thumbs-up"> </i>&nbsp; TrueStory
    <% end %>
  <% end %>
  </div>
  <div class="span2"><strong><%= @story.points %></strong></div>
</div>
<h1>All Stories</h1>
<% @stories.each do |story| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to story.title, story %>
      </h4>
      <small>
        Written <%= time_ago_in_words(story.created_at) %> ago by <%= story.user.name %><br/>
        <%= story.comments.count %> Comments
      </small>
    </div>
  </div>
<% end %>
